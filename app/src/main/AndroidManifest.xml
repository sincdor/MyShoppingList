<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sincdor.myshoppinglist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShopsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShoppingListActivity" />
        <activity
            android:name=".NewStoreDialog"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity android:name=".NewItemActivity" />
        <activity
            android:name=".DeleteStoreActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".EditItemActivity" />
        <activity
            android:name=".DialogItem"
            android:theme="@android:style/Theme.Holo.Dialog" />
    </application>

</manifest>